
@model List<BasketVM>

@if (Model.Count > 0)
{
    <div class="container" style="width: 1200px; margin-top: 60px; display: flex;" id="full">
        <div class="row" style="width:1200px;position: relative;">
            <div class="col" style="display:flex;justify-content:start;align-items:start;flex-direction:column;min-width:900px;padding-right: 30px;">
                <table class="table" style="width:100%;" id="mainTable">
                    <thead>
                        <tr style="font-size:14px;font-family:inter,sans-serif;color:#afb0b6;font-weight: 100;">
                            <th scope="col">img</th>
                            <th scope="col" style="width: 402px;padding: 8px;">Product</th>
                            <th scope="col" style="width:80px;padding: 8px;">Price</th>
                            <th scope="col" style="width:130px;padding: 8px;">Quantity</th>
                            <th scope="col" style="width:82px;padding: 8px;">Subtotal</th>
                            <th scope="col" style="width:30px;padding: 8px;"></th>
                        </tr>
                    </thead>
                    <tbody style="width: 100%;">
                        @foreach (var item in Model)
                        {
                            <tr style="width: 100%;">
                                <td><img src="../Img/@item.ImageUrl" style="width: 70px; height: 70px;"></td>
                                <td style="padding-top: 30px;">@item.Name</td>
                                <td style="padding-top: 30px;">$@item.Price</td>
                                <td style="padding: 30px; position: relative;"><span>@item.Count</span><div style="width: 25px; height: 25px; border-radius: 50%; background-color: rgb(222, 222, 222); text-align: center; cursor: pointer; position: absolute; left: -5px; top: 30px;"><a asp-controller="basket" asp-action="minus" asp-route-id="@item.Id">-</a></div><div style="width: 25px; height: 25px; border-radius: 50%; background-color: rgb(222, 222, 222); text-align: center; cursor: pointer; position: absolute; left: 50px; top: 30px;"><a asp-controller="basket" asp-action="plus" asp-route-id="@item.Id">+</a></div></td>
                                <td style="padding: 30px;">$@(item.Price * item.Count)</td>
                                <td style="padding: 30px;"><a asp-controller="basket" asp-action="remove" asp-route-id="@item.Id">x</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
else
{
<div class="container" style="width: 1200px; margin-top: 60px; display: flex;" id="full">
    <div class="row" style="width:1200px;position: relative;">
        <div class="col" style="display:flex;justify-content:start;align-items:start;flex-direction:column;min-width:900px;padding-right: 30px;">
            <h1>Basket Empty</h1>
        </div>
    </div>
</div>



}

