@model List<Category>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/AdminPanel/Views/Shared/_AdminLayout.cshtml";
    int count = 1;
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title">Basic Table</h4>
                    <p class="card-description">
                        <a class="btn btn-success" asp-action="create">Add Category</a>
                    </p>
                    <table class="table">
                      <thead>
                        <tr>
                          <th>No</th>
                          <th>Name.</th>
                          <th>Desc</th>
                          <th>Settings</th>
                        </tr>
                      </thead>
                      <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                          <tr>
                              <td>@count</td>
                              <td>@item.Name</td>
                              <td>@item.Desc</td>
                              <td>
                                  <a class="btn btn-warning btn-rounded" asp-action="update" asp-route-id="@item.Id"><i style="font-size:16px" class="mdi mdi-tooltip-edit"></i></a>
                                  <a class="btn btn-info btn-rounded" asp-action="detail" asp-route-id="@item.Id"><i style="font-size:16px" class="mdi mdi-information-outline"></i></a>
                                  <a class="btn btn-danger btn-rounded " asp-action="delete" asp-route-id="@item.Id"><i style="font-size:16px" class="mdi mdi-delete"></i></a>
                              </td>
                          </tr>
                       }
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
</div>

